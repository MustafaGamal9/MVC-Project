@model MVC_Project.Models.Order

@{
    ViewData["Title"] = "Update Order";
}


<form asp-action="Update">
    <div asp-validation-summary="ModelOnly"></div>

    <div>
        <label asp-for="OrderDate"></label>
        <input asp-for="OrderDate"/>
        <span asp-validation-for="OrderDate"></span>
    </div>

    <div>
        <label asp-for="TotalAmount"></label>
        <input asp-for="TotalAmount"/>
        <span asp-validation-for="TotalAmount"></span>
    </div>


    <div>
        <input type="submit" value="Save"/>
    </div>
</form>